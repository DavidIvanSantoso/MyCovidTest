<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="ADMIN"
            android:textAlignment="center"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btnDeleteAllCollectionRS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete RS" />

        <Button
            android:id="@+id/btnDeleteAllCollectionUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="delete user" />

        <Button
            android:id="@+id/btnAddAllCollectionRS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add RS" />

        <Button
            android:id="@+id/btnAddAllCollectionUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add user" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="216dp"
            android:layout_height="216dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="16dp"
            android:src="@drawable/ic_launcher_background" />

        <Button
            android:id="@+id/btnGenerateQRCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate QRCode" />

        <Button
            android:id="@+id/btnDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="coba distance" />

        <ImageView
            android:id="@+id/ivCobaProfile"
            android:layout_width="218dp"
            android:layout_height="218dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/account" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChangePicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="change" />

            <Button
                android:id="@+id/btnSavePicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="save" />
        </LinearLayout>

        <Button
            android:id="@+id/btnLogoutAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="64dp"
            android:text="logout" />

    </LinearLayout>


</ScrollView>